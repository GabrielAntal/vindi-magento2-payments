/**
 * @var \Magento\Payment\Block\Info $block
 * @see \Magento\Payment\Block\Info
 */
$specificInfo = $block->getSpecificInformation();
$title = $block->escapeHtml($block->getMethod()->getTitle());
?>
<dl class="payment-method vindi-vp-content">
    <dt class="title"><?= $block->escapeHtml($title) ?></dt>
    <?php if ($specificInfo):?>
        <dd class="content">
            <table class="admin__table-primary data table">
                <?php foreach ($specificInfo as $label => $value):?>
                    <tr>
                        <th scope="row"><?= $block->escapeHtml($label) ?></th>
                        <td>
                            <?= /* @noEscape */ nl2br(implode("\n", $block->getValueAsArray($value, false))) ?>
                        </td>
                    </tr>
                <?php endforeach; ?>
            </table>
        </dd>
    <?php endif;?>
</dl>
<?= $block->getChildHtml() ?>
