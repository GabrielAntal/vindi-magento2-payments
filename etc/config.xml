<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <vindi_vp>
            <general>
                <refund_on_cancel>0</refund_on_cancel>
                <show_payment_info>0</show_payment_info>
                <cancel_unapproved_orders>0</cancel_unapproved_orders>
            </general>
            <address>
                <street>0</street>
                <number>1</number>
                <complement>2</complement>
                <district>3</district>
            </address>
            <endpoints>
                <payments_uri>https://api.intermediador.yapay.com.br/</payments_uri>
                <payments_uri_sandbox>https://api.intermediador.sandbox.yapay.com.br/</payments_uri_sandbox>
                <installments_uri>https://api.intermediador.yapay.com.br/v1/</installments_uri>
                <installments_uri_sandbox>https://api.intermediador.sandbox.yapay.com.br/v1/</installments_uri_sandbox>
                <payments>
                    <create>api/v3/transactions/payment</create>
                    <get><![CDATA[api/v3/transactions/get_by_token_brief/?token_account={token}&token_transaction={order_id}]]></get>
                    <cancel>api/v3/transactions/cancel</cancel>
                    <refund>api/v3/transactions/cancel</refund>
                </payments>
                <installments>transactions/simulate_splitting</installments>
            </endpoints>
        </vindi_vp>
        <payment>
            <vindi_vp_bankslip>
                <active>0</active>
                <model>VindiBankSlipFacade</model>
                <title>Boleto</title>
                <payment_action>order</payment_action>
                <order_status>pending</order_status>
                <paid_order_status>processing</paid_order_status>
                <paid_virtual_order_status>complete</paid_virtual_order_status>
                <cancelled_order_status>canceled</cancelled_order_status>
                <allowspecific>0</allowspecific>
                <specificcountry>BR</specificcountry>
                <!-- Method config -->
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <can_order>1</can_order>
                <can_capture_partial>0</can_capture_partial>
                <can_refund_partial_per_invoice>0</can_refund_partial_per_invoice>
                <can_cancel>1</can_cancel>
                <can_edit>0</can_edit>
                <paymentInfoKeys>transaction_id,token_transaction,status_name,tid,payment_method_id,payment_method_name,split,bank_slip_number</paymentInfoKeys>
                <privateInfoKeys>transaction_id,token_transaction,tid,payment_method_id,payment_method_name,split,bank_slip_number</privateInfoKeys>
                <debug>1</debug>
            </vindi_vp_bankslip>
            <vindi_vp_bankslippix>
                <active>0</active>
                <model>VindiBankSlipPixFacade</model>
                <title>BolePix</title>
                <payment_action>order</payment_action>
                <order_status>pending</order_status>
                <paid_order_status>processing</paid_order_status>
                <paid_virtual_order_status>complete</paid_virtual_order_status>
                <cancelled_order_status>canceled</cancelled_order_status>
                <allowspecific>0</allowspecific>
                <specificcountry>BR</specificcountry>
                <!-- Method config -->
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <can_order>1</can_order>
                <can_capture_partial>0</can_capture_partial>
                <can_refund_partial_per_invoice>0</can_refund_partial_per_invoice>
                <can_cancel>1</can_cancel>
                <can_edit>0</can_edit>
                <paymentInfoKeys>transaction_id,token_transaction,status_name,tid,payment_method_id,payment_method_name,split,bank_slip_number</paymentInfoKeys>
                <privateInfoKeys>transaction_id,token_transaction,tid,payment_method_id,payment_method_name,split,bank_slip_number</privateInfoKeys>
                <debug>1</debug>
            </vindi_vp_bankslippix>
            <vindi_vp_pix>
                <active>0</active>
                <model>VindiPixFacade</model>
                <title>Pix</title>
                <checkout_instructions>Você receberá o QRCode para efetuar o pagamento após finalizar o pedido</checkout_instructions>
                <payment_action>order</payment_action>
                <order_status>pending</order_status>
                <paid_order_status>processing</paid_order_status>
                <paid_virtual_order_status>complete</paid_virtual_order_status>
                <cancelled_order_status>canceled</cancelled_order_status>
                <allowspecific>0</allowspecific>
                <specificcountry>BR</specificcountry>
                <min_order_total>1</min_order_total>
                <!-- Method config -->
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <can_order>1</can_order>
                <can_capture>0</can_capture>
                <can_capture_partial>0</can_capture_partial>
                <can_refund_partial_per_invoice>0</can_refund_partial_per_invoice>
                <can_cancel>1</can_cancel>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_edit>0</can_edit>
                <paymentInfoKeys>transaction_id,token_transaction,status_name,tid,payment_method_id,payment_method_name,split</paymentInfoKeys>
                <privateInfoKeys>transaction_id,token_transaction,tid,payment_method_id,payment_method_name,split</privateInfoKeys>
                <debug>1</debug>
            </vindi_vp_pix>
            <vindi_vp_cc>
                <active>0</active>
                <model>VindiPaymentCreditCardFacade</model>
                <title>Cartão de Crédito</title>
                <payment_action>order</payment_action>
                <order_status>pending</order_status>
                <paid_order_status>processing</paid_order_status>
                <paid_virtual_order_status>complete</paid_virtual_order_status>
                <has_interest>0</has_interest>
                <specificcountry>BR</specificcountry>
                <cctypes>MC,VI,ELO,AE,HC,HI</cctypes>
                <!-- Method config -->
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_order>1</can_order>
                <can_capture_partial>0</can_capture_partial>
                <can_use_internal>1</can_use_internal>
                <can_refund_partial_per_invoice>0</can_refund_partial_per_invoice>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_edit>0</can_edit>
                <masked_fields>cvv,cc_number</masked_fields>
                <useccv>1</useccv>
                <paymentInfoKeys>transaction_id,token_transaction,status_name,tid,payment_method_id,payment_method_name,split</paymentInfoKeys>
                <privateInfoKeys>transaction_id,token_transaction,tid,payment_method_id,payment_method_name,split</privateInfoKeys>
                <debug>1</debug>
                <debugReplaceKeys>cvv,cc_number</debugReplaceKeys>
            </vindi_vp_cc>
        </payment>
    </default>
</config>

