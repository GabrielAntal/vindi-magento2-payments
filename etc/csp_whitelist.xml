<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="vindi-payments-yapay" type="host">*.yapay.com.br/</value>
                <value id="vindi-payments-yapay-br" type="host">*.vindi.com.br/</value>
                <value id="vindi-payments-traycheckout-br" type="host">*.traycheckout.com.br/</value>
                <value id="vindi-payments-fingerprint" type="host">*.k-analytix.com/</value>
                <value id="vindi-payments-fingerprint-dependency" type="host">*.online-metrix.net/</value>
                <value id="vindi-payments-fingerprint-konduto" type="host">*.konduto.com/</value>
                <value id="vindi-payments-fingerprint-clearsale" type="host">*.clearsale.com.br/</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="vindi-payments-frame" type="host">*.yapay.com.br/</value>
                <value id="vindi-payments-fingerprint-frame-dependency" type="host">*.online-metrix.net/</value>
            </values>
        </policy>
        <policy id="frame-ancestors">
            <values>
                <value id="vindi-payments-frame-ancestors" type="host">*.yapay.com.br/</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="vindi-payments-img" type="host">*.yapay.com.br/</value>
                <value id="vindi-payments-img-yapay-br" type="host">*.vindi.com.br/</value>
                <value id="vindi-payments-img-traycheckout-br" type="host">*.traycheckout.com.br/</value>
