                <value id="vindi-payments-fingerprint-img-konduto" type="host">*.konduto.com/</value>
                <value id="vindi-payments-fingerprint-img-clearsale" type="host">*.clearsale.com.br/</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="vindi-payments-connect" type="host">*.yapay.com.br/</value>
                <value id="vindi-payments-connect-yapay-br" type="host">*.vindi.com.br/</value>
                <value id="vindi-payments-connect-traycheckout-br" type="host">*.traycheckout.com.br/</value>
                <value id="vindi-payments-connect-fingerprint" type="host">*.k-analytix.com</value>
                <value id="vindi-payments-fingerprint-connect-dependency" type="host">*.online-metrix.net/</value>
                <value id="vindi-payments-fingerprint-connect-konduto" type="host">*.konduto.com/</value>
                <value id="vindi-payments-fingerprint-connect-clearsale" type="host">*.clearsale.com.br/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
